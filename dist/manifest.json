{
    "name": "GitHub Downloader",
    "version": "0.1",
    "description": "Download files and folders from GitHub via context menu",
    "icons": {
        "19": "icon-19.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "page_action": {
        "default_icon": "icon-19.png",
        "default_title": "GitHub Downloader"
    },
    "background": {
        "scripts": [
            "js/vendor.js",
            "js/background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "contextMenus",
        "downloads",
        "storage",
        "notifications",
        "<all_urls>"
    ],
    "manifest_version": 2
}